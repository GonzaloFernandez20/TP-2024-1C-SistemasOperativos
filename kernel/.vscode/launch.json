{
  // See https://go.microsoft.com/fwlink/?linkid=830387
  // for the documentation about the launch.json format
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "run kernel",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/${workspaceFolderBasename}",
      "args": ["${workspaceFolder}/${workspaceFolderBasename}.config"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      // "environment": [
      //   {"name": "root", "value": "${workspaceFolder}"}
      // ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build kernel"
    }
  ]
}