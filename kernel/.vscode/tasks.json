{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      "this_module": "${workspaceFolderBasename}",
      "log_file": "leaks-${workspaceFolderBasename}.log"
    },
    "cwd": "${workspaceFolder}"
  },
  "tasks": [
    {
      "label": "tail logs",
      "command": "terminator -x tail -f ${this_module}.log ${this_module}_debug.log",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "problemMatcher": [
        "$armcc5"
      ]
    },
    {
      "label": "build kernel",
      "command": "make all",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "clean kernel",
      "command": "make clean",
      "type": "shell",
      "group": {
        "kind": "none"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "valgrind-leak-check",
      "command": "valgrind",
      "args": [
        "--leak-check=full",
        "--log-file=${log_file}",
        "./bin/${this_module}",
        "./${this_module}.config"
      ],
      "type": "shell",
      "hide": true,
      "dependsOn": [
        "build kernel"
      ]
    },
    {
      "label": "leak-check kernel",
      "command": "code",
      "type": "shell",
      "args": [
        "${log_file}"
      ],
      "group": {
        "kind": "test"
      },
      "dependsOn": [
        "valgrind-leak-check"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
